@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br />
<br />
<br />
<br />
<br />
<div class="row">
    <h2>@ViewData["Title"]</h2><span data-placement="right" class="glyphicon glyphicon-question-sign" title="Utilizar esta página para efectuar o login após o registo e validação do email"></span>
    <div class="col-md-4">
        <section>
            <form method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label><span data-placement="right" class="glyphicon glyphicon-question-sign" title="Inserir Email"></span>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label><span data-placement="right" class="glyphicon glyphicon-question-sign" title="Inserir password"></span>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Inicie Sessão</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">Esqueceu-se da sua password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registe-se como novo utilizador</a>
                    </p>
                </div>
            </form>
        </section>
    </div>    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
