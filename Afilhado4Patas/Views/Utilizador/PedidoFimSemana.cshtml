@model Afilhado4Patas.Models.ViewModels.PedidoFimSemanaViewModel;
@{
    ViewData["Title"] = "PedidosFimSemana";
}

<div id="page">
    <div id="box">
        <img id="icon_centrado" src="~/images/fimSemana.png" />
        <h2>Pedido de Fim de Semana</h2>
        <hr />
        <form asp-controller="Utilizador" asp-action="PedidoFimSemana">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataInicio"></label>
                <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                      title="Insira o dia de inicio pretendido para o Fim de Semana com o seu animal.
 Qualquer marcação de Fim de Semana apenas poderá ser marcada com 3 dias de antecedência"></span>
                <div class="input-group date" id="datepicker_marcacaoFimSemana1">
                    <input asp-for="DataInicio" type="text" class="form-control" />
                    <span class="input-group-addon hand">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim"></label>
                <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                      title="Insira o dia de fim pretendido para o Fim de Semana com o seu animal.
 Qualquer marcação de Fim de Semana apenas poderá ser marcada com 3 dias de antecedência"></span>
                <div class="input-group date" id="datepicker_marcacaoFimSemana2">
                    <input asp-for="DataFim" type="text" class="form-control" />
                    <span class="input-group-addon hand">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="AnimalId" class="control-label"></label>
                <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                      title="Selecione o animal a adotar"></span>
                <i class="fa fa-asterisk required" title="Campo Obrigatório"></i>
                <input asp-for="AnimalId" class="form-control" />
                <span asp-validation-for="AnimalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registar Fim de Semana" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<script>
        $(document).ready(function () {
            $('#datepicker_marcacaoFimSemana1').datepicker({
                format: "dd/MM/yyyy",
                startDate: '+3d',
                autoclose: true,
                todayHighlight: true,
                showOtherMonths: true,
                selectOtherMonths: true,
                autoclose: true,
                changeMonth: true,
                changeYear: true,
                orientation: "top",
                beforeShowDay: function(dt){ return [dt.getDay() == 0 || dt.getDay() == 6, ""];}
            });
            $('#datepicker_marcacaoFimSemana2').datepicker({
                format: "dd/MM/yyyy",
                startDate: '+3d',
                autoclose: true,
                todayHighlight: true,
                showOtherMonths: true,
                selectOtherMonths: true,
                autoclose: true,
                changeMonth: true,
                changeYear: true,
                orientation: "top",
                beforeShowDay: function (dt) { return [dt.getDay() == 0 || dt.getDay() == 6, ""]; }
            });
        });
</script>