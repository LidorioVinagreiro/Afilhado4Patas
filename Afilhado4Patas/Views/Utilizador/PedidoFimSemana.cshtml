@model Afilhado4Patas.Models.ViewModels.PedidoFimSemanaViewModel;
@using Microsoft.AspNetCore.Identity
@using Afilhado4Patas.Data;

@inject SignInManager<Utilizadores> SignInManager
@inject UserManager<Utilizadores> UserManager
@{
    ViewData["Title"] = "PedidosFimSemana";
}

<link href="~/css/FormularioCSS/formularios.css" rel="stylesheet" />

<div id="registo_page">
    <form id="login" asp-controller="Utilizador" asp-action="PedidoFimSemana">
        <h1>
            Pedido Fim Semana
            <img id="icon_miniatura" src="~/images/fimSemana.png" />
        </h1>
        <div class="contentform">
            <div class="centercontact">
                <div class="form-group">
                    <div>
                        <label asp-for="DataInicio"></label>
                        <span class="vermelho">*</span>
                        <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                              title="Insira o dia de inicio pretendido para o Fim de Semana com o seu animal.
 Qualquer marcação de Fim de Semana apenas poderá ser marcada com 3 dias de antecedência"></span>
                    </div>
                    <div class="input-group date" id="datepicker_marcacaoFimSemana1">
                        <span class="input-group-addon icon-case hand">
                            <i class="fa fa-calendar-alt"></i>
                        </span>
                        <input asp-for="DataInicio" type="text" value="" class="form-control" />
                    </div>
                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="DataFim"></label>
                        <span class="vermelho">*</span>
                        <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                              title="Insira o dia de fim pretendido para o Fim de Semana com o seu animal.
 Qualquer marcação de Fim de Semana apenas poderá ser marcada com 3 dias de antecedência"></span>
                    </div>
                    <div class="input-group date" id="datepicker_marcacaoFimSemana2">
                        <span class="input-group-addon icon-case hand">
                            <i class="fa fa-calendar-alt"></i>
                        </span>
                        <input asp-for="DataFim" type="text" value="" class="form-control" />
                    </div>
                    <span asp-validation-for="DataFim" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="AnimalId" class="control-label"></label>
                    <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                          title="Selecione o animal a adotar"></span>
                    <i class="fa fa-asterisk required" title="Campo Obrigatório"></i>
                    <input asp-for="AnimalId" class="form-control" />
                    <span asp-validation-for="AnimalId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="bouton-contact">Realizar Pedido</button>
    </form>
</div>
<div class="voltar">
    <a class="efeito efeito_botao_back" id="voltar" asp-controller="Utilizador" asp-action="Dashboard" asp-route-id="@UserManager.GetUserName(User)">Voltar</a>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/locales/bootstrap-datepicker.pt.min.js"></script>
<script>
    $(document).ready(function () {
        $('#datepicker_marcacaoFimSemana1').datepicker({
            beforeShowDay: function (date) {
                var day = date.getDay() == 0 || date.getDay() == 6;
                var nowDate = new Date();
                if (day && nowDate <= date) {
                    return { classes: "Highlighted" };
                }
            },
            format: "dd/mm/yyyy",
            startDate: '+3d',
            autoclose: true,
            todayHighlight: true,
            showOtherMonths: true,
            selectOtherMonths: true,
            autoclose: true,
            changeMonth: true,
            changeYear: true,
            orientation: "bottom left",
            daysOfWeekDisabled: [1, 2, 3, 4, 5],
            weekStart: 1,
            language: 'pt'
        });
        $('#datepicker_marcacaoFimSemana2').datepicker({
            beforeShowDay: function (date) {
                var day = date.getDay() == 0 || date.getDay() == 6;
                var nowDate = new Date();
                if (day && nowDate <= date) {
                    return { classes: "Highlighted" };
                }
            },
            format: "dd/mm/yyyy",
            startDate: '+3d',
            autoclose: true,
            todayHighlight: true,
            showOtherMonths: true,
            selectOtherMonths: true,
            autoclose: true,
            changeMonth: true,
            changeYear: true,
            daysOfWeekDisabled: [1, 2, 3, 4, 5],
            orientation: "bottom left",
            weekStart: 1,
            language: 'pt'
        });
    });
</script>