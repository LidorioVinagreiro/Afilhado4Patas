@model List<Afilhado4Patas.Models.ViewModels.AmizadeViewModel>

@{
    ViewData["Title"] = "PedirAmizade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="page">
    <h2>Possiveis amigos</h2>
    <div id="container_center">
        @do
        {

            <div id="container" class="container">
                <div id="row" class="row">
                    @{
                        var contador = 0;
                        foreach (var amizades in Model)
                        {
                            if (contador < 3)
                            {
                                contador++;
                                @await Html.PartialAsync("pedirAmizade_partial", amizades)
                            }
                            else
                            {
                                break;
                            }
                        }
                        //Remover animais adicionados ao grid
                        for (int i = 0; i < contador; i++)
                        {
                            Model.Remove(Model[0]);
                        }
                    }
                </div>
            </div>
        } while (Model.Count() > 0);


    </div>
</div>


