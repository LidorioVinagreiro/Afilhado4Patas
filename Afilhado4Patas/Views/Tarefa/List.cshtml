@model IEnumerable<Afilhado4Patas.Models.Tarefa>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />

<h2>Lista de tarefas</h2>

<p>
    <a asp-route="TarefasARealizar">Tarefas a Realizar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Selecionar
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utilizador.Perfil.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fim)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" value="@item.Id" name="funcionario">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Utilizador.Perfil.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fim)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>