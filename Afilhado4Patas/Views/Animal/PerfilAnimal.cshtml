@using Microsoft.AspNetCore.Identity
@using Afilhado4Patas.Data;

@model Afilhado4Patas.Models.Animal

@inject ApplicationDbContext Context

@{
    ViewData["Title"] = "PerfilAnimal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PerfilAnimal</h2>

<div>
    <span> Perfil de @Html.DisplayFor(model => model.NomeAnimal)</span>
    @{Animal animal = Context.Animais.FirstOrDefault();
        if (animal.Foto != null)
        {
            string src = "/Utilizadores/" + animal.Id + "/" + animal.Foto;
            <img id="imagem_perfil" src="@src" />
        }
        else
        {
            <img id="imagem_perfil" src="~/images/default.jpg" />
        }
    }
    <table id="user_info_table">
        <tr id="info_tr">
            <td id="info_nome">@Html.DisplayNameFor(model => model.NomeAnimal)</td>
            <td id="info_conteudo">@Html.DisplayFor(model => model.NomeAnimal)</td>
        </tr>
        <tr id="info_tr">
            <td id="info_nome">@Html.DisplayNameFor(model => model.DataNasc)</td>
            <td id="info_conteudo">@Model.DataNasc.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr id="info_tr">
            <td id="info_nome">@Html.DisplayNameFor(model => model.Porte)</td>
            <td id="info_conteudo">@Html.DisplayFor(model => model.Porte)</td>
        </tr>
        <tr id="info_tr">
            <td id="info_nome">@Html.DisplayNameFor(model => model.Peso)</td>
            <td id="info_conteudo">@Html.DisplayFor(model => model.Peso)</td>
        </tr>
        <tr id="info_tr">
            <td id="info_nome">@Html.DisplayNameFor(model => model.Descricao)</td>
            <td id="info_conteudo">@Html.DisplayFor(model => model.Descricao)</td>
        <tr id="info_tr">
            <td id="info_nome">@Html.DisplayNameFor(model => model.DirectoriaAnimal)</td>
            <td id="info_conteudo">@Html.DisplayFor(model => model.DirectoriaAnimal)</td>
        </tr>
        <tr id="info_tr">
            <td id="info_nome">@Html.DisplayNameFor(model => model.Adoptado)</td>
            <td id="info_conteudo">@Html.DisplayFor(model => model.Adoptado)</td>
        </tr>
        <tr id="info_tr">
            <td id="info_nome">@Html.DisplayNameFor(model => model.Padrinho)</td>
            <td id="info_conteudo">@Html.DisplayFor(model => model.Padrinho.FirstName) @Html.DisplayFor(model => model.Padrinho.LastName)</td>
        </tr>
        <tr id="info_tr">
            <td id="info_nome">@Html.DisplayNameFor(model => model.RacaAnimal)</td>
            <td id="info_conteudo">@Html.DisplayFor(model => model.RacaAnimal.NomeRaca)</td>
        </tr>
    </table>
    <div id="edit_options">
        <a asp-controller="Utilizador" asp-action="PerfilEditarDadosPessoais" asp-route-id="">
            <img id="icon" src="~/images/edit.png" />
            <span id="options_spans">Editar Dados Pessoais</span>
        </a>
    </div>
    <div id="edit_options">
        <a asp-controller="Utilizador" asp-action="PerfilEditarFotoPerfil" asp-route-id="">
            <img id="icon" src="~/images/picture.png" />
            <span id="options_spans">Alterar Foto de Perfil</span>

        </a>
    </div>
