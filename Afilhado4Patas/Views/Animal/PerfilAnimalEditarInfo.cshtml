@model Afilhado4Patas.Models.Animal

@{
    ViewData["Title"] = "PerfilAnimalEditarInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PerfilAnimalEditarInfo</h2>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PerfilAnimalEditarInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeAnimal" class="control-label"></label>
                <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                      title="Insira o Nome do Animal"></span>
                <input asp-for="NomeAnimal" class="form-control" />
                <span asp-validation-for="NomeAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNasc" class="control-label"></label>
                <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                      title="Insira a Data de Nascimento do Animal"></span>
                <div class="input-group date" id="datepicker">
                    <input asp-for="DataNasc" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="DataNasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Porte" class="control-label"></label>
                <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                      title="Insira o Porte do Animal"></span>
                <input asp-for="Porte" class="form-control" />
                <span asp-validation-for="Porte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                      title="Insira o Peso do Animal"></span>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                      title="Insira uma Descricao do Animal"></span>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirectoriaAnimal" class="control-label"></label>
                <span data-placement="right" class="glyphicon glyphicon-info-sign" style="color:#539be2"
                      title="Insira uma Diretoria ao Animal"></span>
                <input asp-for="DirectoriaAnimal" class="form-control" />
                <span asp-validation-for="DirectoriaAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" class="form-control" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Adoptado" /> @Html.DisplayNameFor(model => model.Adoptado)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PadrinhoId" class="control-label"></label>
                <select asp-for="PadrinhoId" class="form-control" asp-items="ViewBag.PadrinhoId"></select>
                <span asp-validation-for="PadrinhoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RacaId" class="control-label"></label>
                <select asp-for="RacaId" class="form-control" asp-items="ViewBag.RacaId"></select>
                <span asp-validation-for="RacaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao Perfil do Animal</a>
</div>

