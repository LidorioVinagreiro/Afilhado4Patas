<div>
    <dl class="dl-horizontal">
        <dt>
            Dados Pessoais
        </dt>
        <br />
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Utilizador.Perfil.Photo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Utilizador.Perfil.Photo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Utilizador.Perfil.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Utilizador.Perfil.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Utilizador.Perfil.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Utilizador.Perfil.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Utilizador.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Utilizador.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Utilizador.Perfil.Genre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Utilizador.Perfil.Genre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Utilizador.Perfil.Birthday)
