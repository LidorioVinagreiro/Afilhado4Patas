        <dd>
            @Html.DisplayFor(model => model.Utilizador.Perfil.City)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Utilizador.Perfil.Street)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Utilizador.Perfil.Street)
