        <dt>
            @Html.DisplayNameFor(model => model.Utilizador.Perfil.Postalcode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Utilizador.Perfil.Postalcode)
        </dd>
    </dl>
</div>

<h2>Lista de tarefas do Funcionario</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Descricao
            </th>
            <th>
                Inicio
            </th>
            <th>
                Fim
            </th>
            <th>
                Completada
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaTarefas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Completada)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Responsavel" asp-action="ListaFuncionarios">Voltar á Lista de Funcionários</a>
</div>



