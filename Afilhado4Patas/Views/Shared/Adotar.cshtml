            }
            else if (User.IsInRole("Funcionario"))
            {
                <a class="efeito efeito_botao" id="button_red" title="Ver animais" asp-controller="Funcionario" asp-action="Animais">Ver animais</a>

            }
            else if (User.IsInRole("Utilizador"))
            {
                <a class="efeito efeito_botao" id="button_red" title="Ver animais" asp-controller="Utilizador" asp-action="Animais">Ver animais</a>
            }
            else
            {
                <a class="efeito efeito_botao" id="button_red" title="Ver animais" asp-controller="Guest" asp-action="Animais">Ver animais</a>
            }
        </div>
    </div>
    <img id="imagem_bottom_right_2" src="~/images/foto2.png" />
</div>