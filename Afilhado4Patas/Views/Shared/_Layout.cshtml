                                <li><a asp-controller="Utilizador" asp-action="PedidoAdocao">Realizar Pedido de Adoção</a></li>
                                <li><a asp-controller="Utilizador">Realizar Pedido de Apadrinhamento</a></li>
                                <li><a asp-controller="Utilizador">Marcacao X dias</a></li>
                                <li><a asp-controller="Utilizador">Marcacao de Passeios</a></li>
                                <li><a asp-controller="Utilizador">Os meus pedidos de Adoções</a></li>
                                <li><a asp-controller="Utilizador">As minhas Marcações</a></li>
                            </ul>
