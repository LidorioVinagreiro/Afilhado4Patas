@model IEnumerable<Afilhado4Patas.Models.Animal>

@{
    ViewData["Title"] = "ListaAnimais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListaAnimais</h2>

<p>
    <a asp-action="RegistarAnimal">Registar Animal</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeAnimal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNasc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PorteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectoriaAnimal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adoptado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Padrinho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RacaAnimal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAnimal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNasc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PorteAnimal.TipoPorte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectoriaAnimal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adoptado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Padrinho.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RacaAnimal.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a asp-action="EditarAnimal" asp-route-id="@item.Id">Editar animal</a> |
                <a asp-action="DetalhesAnimal" asp-route-id="@item.Id">Detalhes animal</a> |
                <a asp-action="ApagarAnimal" asp-route-id="@item.Id">Apagar animal</a>
            </td>
        </tr>
}
    </tbody>
</table>
